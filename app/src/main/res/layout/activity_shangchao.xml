<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#00ffffff"
              android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00f7ef04"
        android:orientation="vertical">
        <!--android:background="#f7ef04"-->

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:background="#f7ef04"
            android:gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近上朝记录:"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_shangchaojilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnshangchao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shangchao"/>

    <Button
        android:id="@+id/btntuichao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tuichao"/>

    <Button
        android:id="@+id/btnzidongdenglu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆"/>

    <Button
        android:id="@+id/btnshangchaoliebiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取商朝记录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近的上朝id:"/>

        <TextView
            android:id="@+id/tv_shangchaoid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
